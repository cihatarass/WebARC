@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["alert"] != null)
{

    <link href="~/admintemplate/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/admintemplate/plugins/sweetalert2/sweetalert2.min.js"></script>

    <script>
        Swal.fire('Başarılı', ' @TempData["alert"] ', 'success')
    </script>

}

<h2>İletişim</h2>

@using (Html.BeginForm("Index", "Contact", FormMethod.Post))
{

    @Html.HiddenFor(x => x.Contact_ID)

    <div class="form-group">
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.Title)
        <small>İletişim sayfasının başlık alanı.</small>
    </div>

    <div class="form-group">
        @Html.Label("Adres")
        @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.Adress)
        <small>Detaylı firma adresi.</small>
    </div>


    <div class="form-group">
        @Html.Label("GSM (1)")
        @Html.TextBoxFor(x => x.Gsm, new { @class = "form-control", @type = "tel" })
        @Html.ValidationMessageFor(x=>x.Gsm)
        <small>Telefon Numarası (1) - Boş Bırakılamaz.</small>
    </div>

    <div class="form-group">
        @Html.Label("GSM (2)")
        @Html.TextBoxFor(x => x.Gsm1, new { @class = "form-control", @type = "tel" })
        @Html.ValidationMessageFor(x=>x.Gsm1)
        <small>Telefon Numarası (2) - Boş Bırakılabilir.</small>
    </div>

    <div class="form-group">
        @Html.Label("E-Posta Adresi (1)")
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @type = "email" })
        @Html.ValidationMessageFor(x=>x.Mail)
        <small>E-Posta Adresi (1) - Boş Bırakılamaz.</small>
    </div>

    <div class="form-group">
        @Html.Label("E-Posta Adresi (2)")
        @Html.TextBoxFor(x => x.Mail1, new { @class = "form-control", @type = "email" })
        <small>E-Posta Adresi (2) - Boş Bırakılabilir.</small>
    </div>

    <div class="form-group">
        @Html.Label("Sabit Telefon")
        @Html.TextBoxFor(x => x.Pbx, new { @class = "form-control" })
        <small>Sabit Telefon Numarası - Boş Bırakılabilir.</small>
    </div>


    <div class="form-group">
        @Html.Label("Google Map")
        @Html.TextBoxFor(x => x.Map, new { @class = "form-control" })
        <small>Google Maps üzerinden alınan bağlantı key'i olduğu gibi buraya yazılmalıdır.</small>
    </div>

    <button class=" btn btn-success">Düzenle</button>

}
