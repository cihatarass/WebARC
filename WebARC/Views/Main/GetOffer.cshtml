@model WebARC.Models.MailSendViewModel


@{
    ViewData["Title"] = "Teklif Al";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

@section AdditionalMeta
{
    <title>@ViewBag.Title - Pasifik Deniz İnşaat</title>
    @await Component.InvokeAsync("HeadMeta")
}


@if (TempData["msg"] != null)
{
    <link href="~/admintemplate/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/admintemplate/plugins/sweetalert2/sweetalert2.min.js"></script>

    <script>
        Swal.fire('Başarılı', ' @TempData["msg"] ', 'success')
    </script>

}

<section class="container py-5 bg-light mt-5 mb-5 rounded-3">
    <div class="col-lg-12 border-1 rounded-3 bg-light">
        <h2>Teklif Al.</h2>
        <small>İlgilendiğiniz ürünlerle ilgili hızlıca teklif alın.</small>
        <br />
        <small>İletişim bilgilerinizin doğru olması halinde size hızlıca geri dönülecektir.</small>


        <form method="post" id="contactForm" name="contactForm" class="contactForm mt-3" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="label" for="name"><b>Ünvan / Ad</b></label>
                        @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control mt-2", @placeholder = "Adınız veya Şirket Ünvanınız", @required = "required", } })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="label" for="email"><b>E-Posta Adresi</b></label>
                        @Html.EditorFor(x => x.EmailAddress, new { htmlAttributes = new { @class = "form-control mt-2", @placeholder = "E-Posta Adresiniz", @required = "required", @type = "email", } })
                    </div>
                </div>

                <div class="col-md-12 mt-5">
                    <div class="form-group">
                        <label class="label" for="email"><b>Telefon Numarası</b></label>
                        <br />
                        <small>Lütfen Telefon Numaranızı Başında 0 (sıfır) olmadan giriniz.</small>
                        <br />
                        <small>Örnek : 555 333 99 88</small>
                        @Html.EditorFor(x => x.Telephone, new { htmlAttributes = new { @class = "form-control mt-2", @placeholder = "Telefon Numaranız", @required = "required", @type = "tel", @pattern = "[0-9]{10}" } })
                    </div>
                </div>

                <div class="col-md-12 mt-5">
                    <div class="form-group">
                        <label class="label" for="subject"><b>Konu</b></label>
                        @*@Html.EditorFor(x => x.Subject, new { htmlAttributes = new { @class = "form-control mt-2", @placeholder = "Konu", } })*@
                        <select name="Subject" class="form-control mt-2" required>
                            <option>Fiyat Teklifi</option>
                            <option>Teslim Tarihi</option>
                            <option>Ürün Bilgisi</option>
                            <option>Diğer</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-12 mt-5">
                    <div class="form-group">
                        <label class="label" for="#"><b>Mesaj</b></label>
                        @Html.TextAreaFor(x => x.Message, new { @class = "form-control mt-2", @placeholder = "Lütfen bilgi almak istediğiniz konuyu detaylandırın.", @id = "message", @cols = "30", @rows = "4", @required = "required", })
                    </div>
                </div>

            </div>
            <button class="btn btn-primary mt-3 ml-5">Gönder</button>
        </form>
    </div>
</section>

