@model EntityLayer.Concrete.HeadSlider

@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Düzenle</h2>

@using (Html.BeginForm("UpdateSlider", "Slider", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Slider_ID)


    <div class="form-group">
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("Alt Başlık")
        @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("Açıklama")
        <textarea name="Text" class="form-control" id="editor">@Model.Text</textarea>
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("Resim")
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
        <small></small>
    </div>



    <button class=" btn btn-success">Düzenle</button>
}


@section Scripts{

    <script src="~/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        CKEDITOR.replace('editor')
    </script>

}