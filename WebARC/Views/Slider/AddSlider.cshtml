
@{
    ViewData["Title"] = "AddSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Slayt Ekle</h2>

<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Başlık</label>
                <input type="text" class="form-control" name="Title" />
                <small class="form-text text-muted">Etkiliyici bir başlık veya slogan yazmalısınız.</small>
            </div>

            <div class="form-group">
                <label>Alt Başlık</label>
                <input type="text" class="form-control" name="SubTitle" />
                <small class="form-text text-muted">Bu kısımda sağlamış olduğunuz avantajları ve yetkinliklerinizi kısa bir cümleyle açıklayınız.</small>
            </div>


            <div class="form-group">
                <label>Açıklama</label>
                <textarea class="form-control" id="editor" name="Text"></textarea>
                <small class="form-text text-muted">Yürütmüş olduğunuz kampanya veya öne çıkarmak istediğiniz yeteneklerinizle ilgili ilgi çekici bir açıklama yapınız.</small>
            </div>


            <div class="form-group">
                <label>Fotoğraf</label>
                <input type="file" class="form-control-file" name="Image" />
                <small class="form-text text-muted">Kabul edilen Fotoğraf uzantıları ; .png , .jpg , .jpeg.</small>
                <small class="form-text text-muted">Maksimum Fotoğraf Boyutu ; <b>8000kB.</b></small>
                <small class="form-text text-muted">Ziyaretçilerin aklına kazınacak etkili bir Fotoğraf ekleyin.</small>

            </div>

            <button class="btn btn-success">Ekle</button>

        </form>
    </div>
</div>


@section Scripts{

    <script src="~/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        CKEDITOR.replace('editor')
    </script>

}