@using EntityLayer.Concrete
@model List<Product>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["Alert"] != null)
{
<link href="~/admintemplate/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
<script src="~/admintemplate/plugins/sweetalert2/sweetalert2.min.js"></script>

<script>
    Swal.fire('Başarılı', ' @TempData["Alert"] ', 'success');
</script>


}





<h2>Ürünler</h2>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Stok Durumu</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Product_ID</td>
                                <td>@item.Title</td>
                                <td>@item.Brand</td>
                                <td>@item.SubBrand</td>
                                <td>@item.Stock</td>
                                <td>
                                    <a href="/Product/UpdateProduct/@item.Product_ID/" class="btn btn-warning">Düzenle</a>
                                    <a href="/Product/DeleteProduct/@item.Product_ID/" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>


            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div>

    <div class="col-md-12">
        <a class="btn btn-success" href="/Product/AddProduct">Yeni Ürün Ekle</a>
        <br>
    </div>

</div>

