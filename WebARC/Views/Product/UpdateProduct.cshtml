@model WebARC.Models.ProductImageViewModel
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Düzenle</h2>


@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(x => x.Product_ID)

    <div class="form-group">
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.Title)
        <small></small>
    </div>


    <div class="form-group">
        @Html.Label("Marka")
        @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Brand)
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("Model")
        @Html.TextBoxFor(x => x.SubBrand, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SubBrand)
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("Özellikler")
        @Html.TextBoxFor(x => x.Feature, new { @class = "form-control" })
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("Stok Durumu")
        @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("İçerik");
        @Html.TextAreaFor(x=>x.Text, new { @class = "form-control", @id = "editor" })
        @Html.ValidationMessageFor(x => x.Text)
        <small></small>
    </div>


    <div class="form-group">
        @Html.Label("Resim")
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control-file", @type = "file" })
        <small></small>
    </div>

    <hr />

    <div class="form-group">
        @Html.Label("SEO Açıklama")
        @Html.TextBoxFor(x => x.Seo_Description, new { @class = "form-control" })
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("SEO Anahat Kelimeler")
        @Html.TextBoxFor(x => x.Seo_Keywords, new { @class = "form-control" })
        <small></small>
    </div>

    <button class=" btn btn-success">Düzenle</button>
}

@section Scripts{

    <script src="~/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        CKEDITOR.replace('editor')
    </script>

}