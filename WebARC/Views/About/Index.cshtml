@model EntityLayer.Concrete.About


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<h2>Hakkımızda</h2>


@using (Html.BeginForm("Index", "About", FormMethod.Post))
{


    @Html.HiddenFor(x => x.About_ID)

    <div class="form-group">
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <small>Hakkımızda sayfasının başlık alanı.</small>
    </div>

    <div class="form-group">
        @Html.Label("İçerik")
        <textarea name="Text" id="editor">@Model.Text</textarea>

        <small>Firma veya kişi hakkında yazılacak detaylı yazı alanı.</small>
    </div>

    <div class="form-group">
        @Html.Label("Resim")
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
        <small class="form-text text-muted">Kabul edilen Fotoğraf uzantıları ; .png , .jpg , .jpeg.</small>
        <small class="form-text text-muted">Maksimum Fotoğraf Boyutu ; <b>8000kB.</b></small>
        <small class="form-text text-muted">Ziyaretçilerin aklına kazınacak etkili bir Fotoğraf ekleyin.</small>
    </div>

    <hr />

    <div class="form-group">
        @Html.Label("SEO Açıklama")
        @Html.TextBoxFor(x => x.Seo_Description, new { @class = "form-control" })
        <small>Arama motorunun bu sayfayı tanımlaması için 180 Karakter uzunluğunda özet bir açıklama yazısı yazılmalıdır.</small>
    </div>

    <div class="form-group">
        @Html.Label("SEO Anahar Kelimeler")
        @Html.TextBoxFor(x => x.Seo_Keywords, new { @class = "form-control" })
        <small>Arama motorunun bu sayfayı tanımlaması gerekli olan anahtar kelimeler yazılmalıdır.</small>
    </div>

    <button class=" btn btn-success">Düzenle</button>
}


@section Scripts{ 

    <script src="~/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        CKEDITOR.replace('editor')
    </script>

}