@using EntityLayer.Concrete
@model List<About>


<section class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center py-5">
            <div class="col-md-8">
                @foreach (var item in Model)
                {
                    <h1>@item.Title</h1>
                    <p>
                        @Html.Raw(item.Text)
                    </p>
                }
            </div>
            <div class="col-md-4">
                <img src="/template/assets/img/about-hero.svg" alt="About Hero">
            </div>
        </div>
    </div>
</section>