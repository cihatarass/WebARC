@using EntityLayer.Concrete
@model List<HeadSlider>

<div id="myCarousel" class="carousel slide shadow-lg" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    </ol>
    <div class="carousel-inner">
        @foreach (var item in Model.Take(1))
        {
            <div class="carousel-item active">
                <img class="bd-placeholder-img" width="100%" height="100%" role="img" aria-label=" :  " preserveAspectRatio="xMidYMid slice" focusable="false" src="~/images/@item.Image" />

                <div class="container">
                    <div class="carousel-caption">
                        <h1>@item.Title</h1>
                        <p>@Html.Raw(item.Text)</p>
                    </div>
                </div>
            </div>
        }
</div>
</div>