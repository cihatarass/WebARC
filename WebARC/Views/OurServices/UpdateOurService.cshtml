@model WebARC.Models.OurServiceImageViewModel
@{
    ViewData["Title"] = "UpdateOurService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Düzenle</h2>


@using (Html.BeginForm("UpdateOurService", "OurServices", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(x => x.OurService_ID)

    <div class="form-group">
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.Title)
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("İçerik")
        @Html.TextAreaFor(x=>x.Text, new { @class = "form-control", @id = "editor"  })
        @Html.ValidationMessageFor(x=>x.Text)
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("Resim")
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control-file", @type = "file" })
        <small></small>
    </div>

    <hr />

    <div class="form-group">
        @Html.Label("SEO Açıklama")
        @Html.TextBoxFor(x => x.Seo_Description, new { @class = "form-control"  })
        
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("SEO Anahat Kelimeler")
        @Html.TextBoxFor(x => x.Seo_Keywords, new { @class = "form-control" })
        <small></small>
    </div>

    <button class=" btn btn-success">Düzenle</button>

}


@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>


    <script type="text/javascript">
        CKEDITOR.replace('editor')
    </script>


}