@model EntityLayer.Concrete.OurService


@{
    ViewData["Title"] = "AddOurService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmet Ekle</h2>



@using (Html.BeginForm("AddOurService", "OurServices", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <div class="form-group">
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Title)
        <small></small>
    </div>

    <div class="form-group">
        <label>Açıklama</label>
        @Html.TextAreaFor(x => x.Text, new { @id = "editor" })
        @Html.ValidationMessageFor(x => x.Text)
        <small></small>
    </div>

    <div class="form-group">
        <label>Resim</label>
        <input type="file" name="Image" class="form-control" />
        <small></small>
    </div>

    <hr />

    <div class="form-group">
        <label>SEO Açıklama</label>
        @Html.TextBoxFor(x => x.Seo_Description, new { @class = "form-control" })
        <small></small>
    </div>

    <div class="form-group">
        <label>SEO Anahtar Kelimeler</label>
        @Html.TextBoxFor(x => x.Seo_Keywords, new { @class = "form-control" })
        <small></small>
    </div>


    <button class="btn btn-success">Ekle</button>


}

@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>


    <script type="text/javascript">
        CKEDITOR.replace('editor')
    </script>


}