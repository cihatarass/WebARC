@model EntityLayer.Concrete.Reference

@{
    ViewData["Title"] = "UpdateReference";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Düzenle</h2>


@using (Html.BeginForm("UpdateReference", "Reference", FormMethod.Post, new { enctype = "multipart/form-data" }))
{



    @Html.HiddenFor(x => x.Reference_ID)

    <div class="form-group">
        @Html.Label("Şirket Ünvanı")
        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.CompanyName)
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("Yazan Yetkili")
        @Html.TextBoxFor(x => x.PersonName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PersonName)
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("Proje")
        @Html.TextBoxFor(x => x.Project, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Project)
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("Yorum")
        @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", @id = "editor" })
        @Html.ValidationMessageFor(x => x.Comment)
        <small></small>
    </div>

    <div class="form-group">
        @Html.Label("Resim")
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control-file", @type = "file" })
        <small></small>
    </div>



    <button class="btn btn-success">Düzenle</button>

}

@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>


    <script type="text/javascript">
        CKEDITOR.replace('editor')
    </script>


}
