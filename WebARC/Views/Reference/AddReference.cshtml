@model EntityLayer.Concrete.Reference 

@{
    ViewData["Title"] = "AddReference";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Referans Ekle</h2>

@using (Html.BeginForm("AddReference", "Reference", FormMethod.Post, new { enctype = "multipart/form-data" })) {


    <div class="form-group">
        <label>Firma Adı</label>
        @Html.TextBoxFor(x=>x.CompanyName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.CompanyName)
        <small></small>
    </div>

    <div class="form-group">
        <label>Yazan Personel</label>
        @Html.TextBoxFor(x => x.PersonName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PersonName)
        <small></small>
    </div>

    <div class="form-group">
        <label>Proje</label>
        @Html.TextBoxFor(x => x.Project, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Project)
        <small></small>
    </div>

    <div class="form-group">
        <label>Yorum</label>
        @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", @id = "editor" })
        @Html.ValidationMessageFor(x => x.Comment)
        <small></small>
    </div>

    <div class="form-group">
        <label>Resim</label>
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control", @type = "file" })
        <small></small>
    </div>


    <button class="btn btn-success">Ekle</button>


}

@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>


    <script type="text/javascript">
        CKEDITOR.replace('editor')
    </script>


}