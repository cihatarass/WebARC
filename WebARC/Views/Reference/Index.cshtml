@using EntityLayer.Concrete
@model List<Reference>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@if (TempData["Alert"] != null)
{
    <link href="~/admintemplate/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/admintemplate/plugins/sweetalert2/sweetalert2.min.js"></script>

    <script>
        Swal.fire('Başarılı', ' @TempData["Alert"] ', 'success')
    </script>
    
}


<h2>Referanslar</h2>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Firma Adı</th>
                            <th>Yazan Yetkili</th>
                            <th>Proje</th>
                            <th>Yorum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Reference_ID</td>
                                <td>@item.CompanyName</td>
                                <td>@item.PersonName</td>
                                <td>@item.Project</td>
                                <td>@Html.Raw(item.Comment)</td>
                                <td>
                                    <a href="/Reference/UpdateReference/@item.Reference_ID/" class="btn btn-warning">Düzenle</a>
                                    <a href="/Reference/DeleteReference/@item.Reference_ID/" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>


            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div>

    <div class="col-md-12">
        <a class="btn btn-success" href="/Reference/AddReference">Yeni Referans Ekle</a>
        <br>
    </div>

</div>